{
    "name": "hdx-summary-stats",
    "title": "HDX Summary Stats",
    "type": "cookbook",
    "columns": [
        "#indicator+name",
        "#date",
        "#loc+name",
        "#value"
    ],
    "recipes": [
        {
            "name": "unique-users-by-country",
            "title": "Unique Users By Country",
            "description": "Total number of users in 2018 by Country. Individual users are identified by browser cookie, IP address, etc.",
            "type": "chart",
            "ingredients": {
                "aggregateFunctions": [
                "sum"
                ],
                "aggregateColumns": ["#loc+name"],
                "filtersWith": [
                {
                    "#indicator+name": "unique visitors by country"
                }
                ],
                "valueColumns": [
                "#value"
                ]
            }
        },
        {
            "name": "total-datasets-on-hdx",
            "title": "Total Number of Datasets on HDX",
            "description": "",
            "type": "timeseries",
            "ingredients": {
                "aggregateFunctions": ["sum"],
                "aggregateColumns": ["#date"],
                "filtersWith": [
                    {
                    "#indicator+name": "datasets on hdx"
                    }
                ],
                "valueColumns": [
                    "#value"
                ]
            }
        },
        {
            "name": "latest-total-datasets-on-hdx",
            "title": "Number of Datasets on HDX at Year End",
            "description": "",
            "type": "key figure",
            "ingredients": {
                "aggregateFunctions": [],
                "aggregateColumns": [],
                "filtersWith": [
                    {
                    "#indicator+name": "datasets on hdx"
                    },
                    {
                    "#date": "$MAX$"
                    }
                ],
                "valueColumns": [
                    "#value"
                ]
            }
        },
        {
            "name": "latest-hxlated-datasets-on-hdx",
            "title": "Number of Datasets with HXL Tags at Year End",
            "description": "",
            "type": "key figure",
            "ingredients": {
                "aggregateFunctions": [],
                "aggregateColumns": [],
                "filtersWith": [
                    {
                    "#indicator+name": "hxlated datasets on hdx"
                    },
                    {
                    "#date": "$MAX$"
                    }
                ],
                "valueColumns": [
                    "#value"
                ]
            }
        },
        {
            "name": "orgs-on-hdx",
            "title": "Number of Organizations on HDX",
            "description": "",
            "type": "timeseries",
            "ingredients": {
                "aggregateFunctions": ["sum"],
                "aggregateColumns": ["#date"],
                "filtersWith": [
                    {
                    "#indicator+name": "orgs on hdx"
                    }
                ],
                "valueColumns": [
                    "#value"
                ]
            }
        },
        {
            "name": "unique-users",
            "title": "Unique Weekly HDX Users",
            "description": "",
            "type": "timeseries",
            "ingredients": {
                "aggregateFunctions": ["sum"],
                "aggregateColumns": ["#date"],
                "filtersWith": [
                    {
                    "#indicator+name": "unique users on hdx&tools"
                    }
                ],
                "valueColumns": [
                    "#value"
                ]
            }
        },
        {
            "name": "total-downloads",
            "title": "Total Downloads",
            "description": "Total number of dataset downloads on HDX, by week, excluding known indexing bots",
            "type": "timeseries",
            "ingredients": {
                "aggregateFunctions": ["sum"],
                "aggregateColumns": ["#date"],
                "filtersWith": [
                    {
                    "#indicator+name": "total downloads"
                    }
                ],
                "valueColumns": [
                    "#value"
                ]
            }
        },
        {
            "name": "unqiue-downloaders",
            "title": "Users downloading datasets from HDX, by week",
            "description": "Individual users downloading at least one dataset from HDX, excluding known indexing bots",
            "type": "timeseries",
            "ingredients": {
                "aggregateFunctions": ["sum"],
                "aggregateColumns": ["#date"],
                "filtersWith": [
                    {
                    "#indicator+name": "unique human and programmatic downloads (excl known bots)"
                    }
                ],
                "valueColumns": [
                    "#value"
                ]
            }
        }
    ]
}